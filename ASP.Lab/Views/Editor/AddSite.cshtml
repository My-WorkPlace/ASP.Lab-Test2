@model Site

<h2>Add new site</h2>

<form asp-action="SaveSite" asp-controller="Editor" asp-antiforgery="true">
    <div>
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="UrlMainPage"></label>
            <input asp-for="UrlMainPage" />
        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
        </div>
        <div>
            <input type="submit" class="btn-success" value="Save" />
        </div>
    </div>
</form>