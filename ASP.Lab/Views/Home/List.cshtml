<div class="mx-auto my-5 my-sm-5 my-lg-5 p-5">
    <h3>Sites</h3>
    <table class="table table-striped table-dark mr-2">
        <thead>
        <tr>
            <th scope="col">Site</th>
            <th scope="col">Category</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var site in Model.AllSites)
            {
                <tr>
                    <td>@site.Name</td>
                    <td>@site.Category.Name</td>
                    <td><a href="@site.UrlMainPage">Go to site</a></td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>